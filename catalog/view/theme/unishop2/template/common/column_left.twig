{% if modules or menu_expanded %}
	<aside id="column-left" class="col-sm-4 col-md-3 col-lg-3 col-xxl-4 hidden-xs {{route == 'common/home' ? 'hidden-sm'}}">
		{% for module in modules %}
			{{module}}
		{% endfor %}
	</aside>
	{% if not modules and route != 'common/home' %}
		<script>
			$(function() {
				$('#content').removeClass('col-sm-4').removeClass('col-sm-8').addClass('col-sm-12');
			});
		</script>
	{% endif %}
{% endif %}
